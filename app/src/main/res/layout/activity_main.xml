<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pupupon.armenianalphabetquiz.MainActivity" >

    <TextView
        android:text="QUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textQuestion"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="4"
        android:textSize="@dimen/textQuestion"
        android:textColor="@color/Text"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/space" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/answerRow1"
        android:layout_marginBottom="@dimen/space" >

        <Button
            android:text="ANS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/textAnswer"
            android:textColor="@color/Text"
            android:layout_weight="1" />

        <Button
            android:text="ANS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer2"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/textAnswer"
            android:textColor="@color/Text"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/answerRow2"
        android:layout_marginBottom="@dimen/space" >

        <Button
            android:text="ANS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer3"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/textAnswer"
            android:textColor="@color/Text"
            android:layout_weight="1" />

        <Button
            android:text="ANS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer4"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/textAnswer"
            android:textColor="@color/Text"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="RESULT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textResult"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/answerBackground"
        android:textSize="@dimen/textResult"
        android:textColor="@color/answerDefaultText"
        android:textStyle="bold"
        android:layout_weight="2" />

</LinearLayout>