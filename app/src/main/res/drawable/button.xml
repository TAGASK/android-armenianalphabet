<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/buttonBackgroundPressed" />
            <stroke android:width="1dp" android:color="@color/buttonBorderPressed" />
            <corners android:radius="0dp" />
            <padding android:left="10dp" android:top="0dp" android:right="10dp" android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/buttonBackground" />
            <stroke android:width="1dp" android:color="@color/buttonBorder" />
            <corners android:radius="0dp" />
            <padding android:left="10dp" android:top="0dp" android:right="10dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>